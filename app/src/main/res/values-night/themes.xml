<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.STS" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Set Color Primary. -->

        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- My FontFamily. -->

        <item name="fontFamily">@font/primary_regular</item>

        <item name="colorOnSurface">@color/white</item>

    </style>

    <!-- Set ToolBar Theme. -->

    <style name="Custom.App.Toolbar" parent="Theme.Material3.Dark">

        <item name="fontFamily">@font/primary_bold</item>
        <item name="android:textSize">26sp</item>

    </style>

    <!-- Set Color Indicator. -->

    <style name="Custom.App.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">

        <item name="android:color">@color/green_light_indicator</item>
        <item name="titleTextColor">@color/white</item>

    </style>

</resources>